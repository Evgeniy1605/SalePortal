@model List<SalePortal.Data.CommodityEntity>

<div class="text-center page ">
    <h1 class="display-4">Welcome</h1>

    
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<a class="btn btn-danger" asp-controller="TryImage" asp-action="Index">Try</a>

<hr />
@foreach (var item in Model)
{



    string path = "~/Images/" + $"{item.Id}" + ".png";
    <form asp-controller="Commodity" asp-action="Details" asp-route-id="@item.Id">
        <button type="submit">
            <div>
                <img src="@path" asp-append-version="true" width="50" />
                <p>@item.Name </p>
                <p>@item.Price</p>
                <p>@item.Description</p>
                <p>@item.PublicationDate</p>
            </div>
        </button>
    </form>
    <br />
}

