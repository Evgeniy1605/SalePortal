@model CommodityInputModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer;

<h1>@localizer["Edit"]</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for ="TypeId" />
            <div class="form-group">
                <label class="control-label">@localizer["Name"]</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">@localizer["Price"]</label>
                <input asp-for="Price" type="number" step="0,1" class="form-control" />
                <span asp-validation-for="Price"  class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">@localizer["Description"]</label>
                <input asp-for="Description"  class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">@localizer["Image"]</label>
                <input type="file" name="ImageFile" class="form-control" />

            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="@localizer["Save"]" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
